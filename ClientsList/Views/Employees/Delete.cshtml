@model ClientsList.Models.Employee

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="form-control" style="width:600px;height:50px; text-align:center; margin-left:220px;background-color:#F76400;color:white; font-size:23px;"><strong> Employee Delete Page</strong></h2>

<h3>Are you sure you want to delete this Employee Profile?</h3>
<div>
   
    <hr />
    <div style="height:300px;width:100%; background-color:#F1F1F1;">

        <div class="form-group " style="margin-top:20px; margin-left:260px;">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">


                <img src="~/Files/@Url.Content(Model.ImageName)" style="width:200px; height:200px;margin-left:0px; "><br />



            </div>
        </div>
        <div class="form-group " style="margin-top:20px; margin-left:290px;">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">
              


                <h4><strong>@Html.DisplayFor(model => model.EmployeeName)</strong> </h4>
                <h4> @Html.DisplayFor(model => model.Designation)</h4>
             

            </div>
        </div>



        <hr />

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action( "Index","Employees" ) ">
                <img src="@Url.Content("~/Files/back.png") " style="height:50px; width:50px;" />
            </a>
            <input type="submit" value="Yes,Confirm  Delete" class="btn btn-danger" /> 
            
        </div>
    }
</div>
