                    @Html.TextAreaFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", style = "border-color:#B4CE45;" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-6" style="float:left; ">
                @Html.LabelFor(model => model.PhoneNo, htmlAttributes: new { @class = "control-label col-md-5", style = "text-align:left;" })
