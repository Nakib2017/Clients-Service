@model ClientsList.Models.Cleint

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="form-control" style="width:600px;height:50px; text-align:center; margin-left:220px;background-color:#F76400;color:white; font-size:23px;"><strong>  Client Info. Edit Page</strong></h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ClientID)

        <div style="width:100%; height:300px;background-color:#F1F1F1;">


            <br />

            <div class="form-group  col-md-6" style="float:left;">
                @Html.LabelFor(model => model.ClientName, htmlAttributes: new { @class = "control-label col-md-5", style = "text-align:left;" })
                <div class="col-md-7">
                    @Html.EditorFor(model => model.ClientName, new { htmlAttributes = new { @class = "form-control", style = "border-color:#B4CE45;" } })
                    @Html.ValidationMessageFor(model => model.ClientName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6" style="float:left;">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-5", style = "text-align:left;" })
