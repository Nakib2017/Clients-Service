                    @Html.ValidationMessageFor(model => model.NextServiceDate, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:450px;margin-top:20px;">
                <input type="submit" value="Save" class="btn btn-success" style="height:50px; width:200px; font-size:20px;" />
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action( "Index","Cleints" ) ">
        <img src="@Url.Content("~/Files/back.png") " style="height:50px; width:50px;" />
    </a>
</div>

