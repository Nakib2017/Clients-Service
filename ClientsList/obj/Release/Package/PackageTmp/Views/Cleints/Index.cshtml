@model IEnumerable<ClientsList.Models.Cleint>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Client Service List</h2>

@using (Html.BeginForm("ClientListIndex", "Cleints", FormMethod.Get))
{
    <p>
        <input type="text" name="searchString" class="col-lg-8" style="margin-left: 400px; margin-right: 5px;text-align:center; height:35px; font-size:15px" placeholder="Search Client " />


        <button type="submit" class="btn btn-warning">Search</button>
    </p>
}


<button style="background-color: forestgreen; border-radius: 5px;border: none;width:100px;height:50px;margin-left:5px;">

    <h6 style="text-align:center; "><strong>   @Html.ActionLink("Create New", "Create", null, new { style = "text-decoration:none;color:white;font-size: 15px ;margin-top:10px;" }) </strong></h6>
</button>
  



